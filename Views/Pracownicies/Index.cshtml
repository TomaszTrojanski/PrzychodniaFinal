@model IEnumerable<PrzychodniaFinal.Models.Pracownicy>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista Pracowników</h1>

<p>
    <a asp-action="Create">Dodaj</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Imie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nazwisko)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pesel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdresZamieszkania)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataZatrudnienia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoniecKontraktu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Imie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nazwisko)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pesel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdresZamieszkania)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataZatrudnienia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KoniecKontraktu)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PracownicyID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PracownicyID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PracownicyID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>